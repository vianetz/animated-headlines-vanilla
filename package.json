{
  "name": "@vianetz/animated-headlines-vanilla",
  "version": "2.0.0",
  "description": "Simple animated, accessible headlines using plain JavaScript.",
  "main": "dist/js/animated-headline.js",
  "scripts": {
    "dev": "npm run development",
    "development": "npm run tsc && mix",
    "watch": "tsc --watch --project . & mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "prod": "npm run production",
    "production": "npm run tsc && mix --production",
    "tsc": "tsc --project ."
  },
  "author": "Geoff Selby",
  "contributors": [
    "Christoph Massmann <cm@vianetz.com> (https://vianetz.com/)"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vianetz/animated-headlines-vanilla.git"
  },
  "keywords": [
    "animated headlines",
    "typewriter"
  ],
  "devDependencies": {
    "laravel-mix": "^6.0",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.69.5",
    "sass-loader": "^12.6.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3"
  }
}
