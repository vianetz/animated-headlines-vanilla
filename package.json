{
  "name": "@vianetz/animated-headlines-vanilla",
  "version": "0.0.0",
  "description": "Simple animated, accessible headlines using a plain JavaScript Web Component.",
  "browser": "dist/animated-headline.js",
  "style": "dist/animated-headline.css",
  "scripts": {
    "clean": "rm -rf dist/* demo/dist/*",
    "dev": "npm run development",
    "development": "mix",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "prod": "npm run production",
    "production": "mix --production",
    "test": "tsc --noEmit && bundlesize",
    "build": "npm run clean && npm run prod"
  },
  "author": "Geoff Selby",
  "contributors": [
    "Christoph Massmann <cm@vianetz.com> (https://vianetz.com/)"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vianetz/animated-headlines-vanilla.git"
  },
  "keywords": [
    "animated headlines",
    "typewriter"
  ],
  "devDependencies": {
    "bundlesize2": "^0.0.34",
    "laravel-mix": "^6.0",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.69.5",
    "sass-loader": "^12.6.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3"
  }
}
